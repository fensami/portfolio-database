generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                   String   @id @default(uuid())
  name                 String
  bannerImage          String
  description          String
  multipleDescriptions String[] // multiple description points
  liveLink             String
  githubLink           String
  serverLink           String?
  technologies         String[]
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  images               String[] // native Postgres array

  @@map("projects")
}

